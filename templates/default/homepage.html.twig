                <div class="col-lg-12">
                    {{ form_start(contact) }}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_widget(contact.name, {'attr': {'class': 'form-control', 'placeholder': 'Firstname & lastname'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(contact.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            </div>
                            <div class="form-group">
